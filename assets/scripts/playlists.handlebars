{{#each playlists as |playlist|}}
  <div class="col-sm-3 playlist-box">
    <h2 data-id="{{playlist.id}}" class="my-playlist">{{playlist.title}}</h2>

    <ul data-id="{{playlist.id}}">

      <li>
        <h3>{{#if playlist.id}}
        Description:{{playlist.description}}
        Playlist ID:{{playlist.id}}
        {{playlist.songs}}
        {{else}}
        No description found.
      {{/if}}
        </h3>
      </li>

      <li>
        <form class="update-playlist">
          <input name="playlist[title]" type="text" placeholder="title">
          <br>
          <input name="playlist[description]" type="text" placeholder="description">
          <br><br>
          <button type="submit" class="btn btn-primary">Update Playlist!</button>
        </form>
      </li>

      <li>
        <button  class="delete-playlist btn btn-danger">Delete Playlist</button>
      </li>

       <li>
      </li>
      <li>
        <button class="get-song btn btn-light">Get Songs</button>

        <div class="song-content"></div>
        <div>{{playlist.songs}}</div>

        <form class="create-song">
          <input name="song[title]" type="text" placeholder="title">
          <br>
          <input name="song[artist]" type="text" placeholder="artist">
          <br>
          <input name="song[album]" type="text" placeholder="album">
          <br>
          <input name="song[playlist_id]" type="text" placeholder="playlist_id">
          <button type="submit" class="btn btn-primary">Add Song</button>
        </form>

      </li>

      </ul>

    </div>

    {{/each}}

    {{#each songs as |song|}}
    <h5 data-id="{{song.id}}" class="my-song">{{song.title}}</h5>
    <ul data-id="{{song.id}}">
      <li>
        <h5>
          {{#if song.title}}
          Artist:{{song.artist}}
          Album:{{song.album}}
          {{else}}
          No description found.
          {{/if}}
        </h5>
      </li>
      <li>
        <button  class="delete-song btn btn-danger">Delete Song</button>
      </li>
    </ul>
    {{/each}}


